@model TabloidMVC.Models.Subscription

@{
    ViewData["Title"] = "CreateSubscription";
}

<h1>CreateSubscription</h1>

<h4>Do you want to subscribe to this author?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSubscription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="SubscriberUserProfileId" type="hidden" class="form-control" />
                <span asp-validation-for="SubscriberUserProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ProviderUserProfileId" type="hidden" class="form-control" />
                <span asp-validation-for="ProviderUserProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BeginDateTime" type="hidden" class="form-control" />
                <span asp-validation-for="BeginDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="EndDateTime" type="hidden" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserProfileId" type="hidden" class="form-control" />
                <span asp-validation-for="UserProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Subscribe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
